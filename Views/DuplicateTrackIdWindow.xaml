<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ViewTracker.Views.DuplicateTrackIdWindow"
        Title="Duplicate TrackID Detection"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="OriginalRoomStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style x:Key="DuplicateRoomStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock FontSize="16" FontWeight="Bold" Text="⚠️ Duplicate TrackIDs Detected"/>
            <TextBlock x:Name="SummaryText" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,0,0,10">
            The following rooms share the same trackID. The system has automatically identified which room should keep the original trackID based on snapshot history and room matching logic.
        </TextBlock>

        <!-- Duplicate Groups List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="DuplicateGroupsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,15" Padding="10" CornerRadius="4">
                            <StackPanel>
                                <!-- Group Header -->
                                <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">
                                    <Run Text="TrackID: "/>
                                    <Run Text="{Binding TrackId, Mode=OneWay}" Foreground="#1976D2"/>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding Rooms.Count, Mode=OneWay}"/>
                                    <Run Text=" duplicates)"/>
                                </TextBlock>

                                <!-- Rooms in this group -->
                                <ItemsControl ItemsSource="{Binding Rooms}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,5" Padding="10" CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsOriginal}" Value="True">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                                <Setter Property="BorderThickness" Value="2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsOriginal}" Value="False">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                                <Setter Property="BorderBrush" Value="#FF9800"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Icon -->
                                                    <TextBlock Grid.Column="0" FontSize="18" VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOriginal}" Value="True">
                                                                        <Setter Property="Text" Value="✓"/>
                                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsOriginal}" Value="False">
                                                                        <Setter Property="Text" Value="→"/>
                                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <!-- Room Info -->
                                                    <StackPanel Grid.Column="1" Margin="5,0">
                                                        <TextBlock FontWeight="SemiBold">
                                                            <Run Text="{Binding RoomNumber, Mode=OneWay}"/>
                                                            <Run Text=" - "/>
                                                            <Run Text="{Binding RoomName, Mode=OneWay}"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="11" Foreground="#666">
                                                            <Run Text="Level: "/>
                                                            <Run Text="{Binding Level, Mode=OneWay}"/>
                                                            <Run Text=" | Element ID: "/>
                                                            <Run Text="{Binding ElementId, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Action Info -->
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock FontWeight="SemiBold" HorizontalAlignment="Right">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsOriginal}" Value="True">
                                                                            <Setter Property="Text" Value="[KEPT]"/>
                                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsOriginal}" Value="False">
                                                                            <Setter Property="Text">
                                                                                <Setter.Value>
                                                                                    <MultiBinding StringFormat="[→ {0}]">
                                                                                        <Binding Path="NewTrackId"/>
                                                                                    </MultiBinding>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                            <Setter Property="Foreground" Value="#FF9800"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <TextBlock FontSize="11" Foreground="#666" Text="{Binding MatchReason, Mode=OneWay}" HorizontalAlignment="Right"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" IsCancel="True"/>
            <Button Content="Apply Fix" Click="ApplyButton_Click" IsDefault="True"
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
