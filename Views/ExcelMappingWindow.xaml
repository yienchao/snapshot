<Window x:Class="ViewTracker.Views.ExcelMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Excel Columns to Filled Region Parameters"
        Height="750" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Map Excel Columns to Parameters" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Match your Excel columns with Filled Region parameters" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Mapping Grid -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="3" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Excel Column" FontWeight="Bold" Margin="5"/>
                        <TextBlock Grid.Column="2" Text="Filled Region Parameter" FontWeight="Bold" Margin="5"/>
                    </Grid>

                    <Separator Margin="0,5,0,10"/>

                    <!-- Dynamic mapping rows will be added here -->
                    <ItemsControl x:Name="MappingItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding SourceColumn}" VerticalAlignment="Center" Margin="5" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="→" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="#666"/>
                                    <ComboBox Grid.Column="2" ItemsSource="{Binding AvailableParameters}" SelectedItem="{Binding TargetParameter}" Margin="5"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Layout Options -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,10,0,10">
            <StackPanel>
                <TextBlock Text="Layout Options" FontWeight="Bold" Margin="0,0,0,8"/>

                <!-- Group by -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Group spaces by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" x:Name="GroupByComboBox">
                        <ComboBoxItem Content="(No grouping)" IsSelected="True"/>
                    </ComboBox>
                </Grid>
                <TextBlock Text="Spaces with same value will be grouped together with extra spacing between groups"
                           FontSize="11" Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <!-- Area units -->
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Area values are in:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" x:Name="AreaUnitsComboBox">
                        <ComboBoxItem Content="Square Meters (m²)" IsSelected="True" Tag="SquareMeters"/>
                        <ComboBoxItem Content="Square Feet (ft²)" Tag="SquareFeet"/>
                    </ComboBox>
                </Grid>
                <TextBlock Text="Used to calculate filled region dimensions (Revit uses feet internally)"
                           FontSize="11" Foreground="#666" TextWrapping="Wrap" Margin="0,5,0,0"/>

                <Separator Margin="0,5"/>

                <TextBlock Text="Mapping Presets" FontWeight="Bold" Margin="0,8,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnSavePreset" Content="Save as Preset..." Click="SavePreset_Click" Padding="10,5" Margin="0,0,5,0"/>
                    <Button x:Name="BtnLoadPreset" Content="Load Preset..." Click="LoadPreset_Click" Padding="10,5"/>
                    <TextBlock x:Name="PresetStatusText" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#666" FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel_Click" Padding="20,8" Margin="5" Background="#757575" Foreground="White"/>
            <Button Content="Import" Click="Import_Click" Padding="20,8" Margin="5" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
