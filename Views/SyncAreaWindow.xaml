<Window x:Class="ViewTracker.Views.SyncAreaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Synchroniser la surface réelle"
        Height="200" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="12">
            <Run Text="Sélectionnez le paramètre où synchroniser la surface :"/>
        </TextBlock>

        <!-- ComboBox -->
        <ComboBox Grid.Row="2"
                  x:Name="ParameterComboBox"
                  FontSize="12"
                  IsEditable="True"
                  Height="28"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="Annuler"
                    Width="80"
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
