<Window x:Class="ViewTracker.Views.RestorePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview Restore Changes"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Preview Restore Changes" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="VersionText" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filter -->
        <GroupBox Grid.Row="1" Header="Filter" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="AllChangesRadio" Content="All Changes" IsChecked="True"
                             GroupName="Filter" Margin="0,0,15,0" Checked="FilterRadio_Changed"/>
                <RadioButton x:Name="ModifiedOnlyRadio" Content="Modified Only"
                             GroupName="Filter" Margin="0,0,15,0" Checked="FilterRadio_Changed"/>
                <RadioButton x:Name="UnchangedOnlyRadio" Content="Unchanged Only"
                             GroupName="Filter" Checked="FilterRadio_Changed"/>
            </StackPanel>
        </GroupBox>

        <!-- Changes Grid -->
        <DataGrid Grid.Row="2" x:Name="ChangesGrid" SelectionMode="Single" CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room" Binding="{Binding RoomIdentifier}" Width="100"/>
                <DataGridTextColumn Header="Parameter" Binding="{Binding ParameterName}" Width="150"/>
                <DataGridTextColumn Header="Current Value" Binding="{Binding CurrentValue}" Width="200"/>
                <DataGridTextColumn Header="â†’" Width="30"/>
                <DataGridTextColumn Header="Snapshot Value" Binding="{Binding SnapshotValue}" Width="200"/>
                <DataGridTextColumn Header="Status" Binding="{Binding ChangeStatus}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="Changed">
                                    <Setter Property="Foreground" Value="#FF9800"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                                <Trigger Property="Text" Value="Unchanged">
                                    <Setter Property="Foreground" Value="#666"/>
                                </Trigger>
                                <Trigger Property="Text" Value="New Room">
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Summary -->
        <Border Grid.Row="3" Background="#FFF8E1" BorderBrush="#FFA000" BorderThickness="1"
                Padding="15" Margin="0,15,0,15" CornerRadius="3">
            <StackPanel>
                <TextBlock Text="Summary:" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock x:Name="SummaryText" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Close" Click="Close_Click" Background="#757575" Foreground="White"
                    Padding="15,8" Margin="5" FontSize="14" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
