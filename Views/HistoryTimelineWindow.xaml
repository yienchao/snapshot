<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ViewTracker.Views.HistoryTimelineWindow"
        Title="Snapshot History Timeline"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="OfficialBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="DraftBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="TimelineBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="SelectedBrush" Color="#FF9800"/>

        <!-- Style for timeline nodes -->
        <Style x:Key="TimelineNodeStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Stroke" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="StrokeThickness" Value="3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for version cards -->
        <Style x:Key="VersionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="{StaticResource SelectedBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Name="TitleText" FontSize="18" FontWeight="Bold" Text="Snapshot History Timeline"/>
                <TextBlock Name="SubtitleText" FontSize="12" Foreground="Gray" Margin="0,5,0,0" Text="Track ID: ..."/>
            </StackPanel>
        </Border>

        <!-- Timeline Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid Name="TimelineContainer">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>   <!-- Date column -->
                    <ColumnDefinition Width="30"/>    <!-- Timeline line -->
                    <ColumnDefinition Width="*"/>     <!-- Content column -->
                </Grid.ColumnDefinitions>

                <!-- Timeline will be dynamically generated here -->
                <StackPanel Name="TimelinePanel" Grid.Column="0" Grid.ColumnSpan="3"/>

            </Grid>
        </ScrollViewer>

        <!-- Footer with actions -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Name="SummaryText" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="Gray"/>
                <Button Name="ExportButton" Content="Export to Excel" Click="ExportButton_Click" Padding="15,8" Margin="5,0"/>
                <Button Name="CloseButton" Content="Close" Click="CloseButton_Click" Padding="15,8" Margin="5,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
