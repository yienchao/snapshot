<Window x:Class="ViewTracker.Views.RestoreResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restore Complete"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="15" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="✅ Restore Complete" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="VersionText" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Results Summary -->
        <GroupBox Grid.Row="1" Header="Results" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="UpdatedRoomsText" FontSize="14" Margin="0,5"/>
                <TextBlock x:Name="CreatedRoomsText" FontSize="14" Margin="0,5"/>
                <TextBlock x:Name="BackupText" FontSize="12" Foreground="#666" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <!-- Unplaced Rooms List -->
        <GroupBox Grid.Row="2" x:Name="UnplacedRoomsGroup" Header="⚠️ Unplaced Rooms Created" Padding="10" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="These rooms existed in the snapshot but were deleted. They have been recreated with all parameters but are NOT PLACED. You must manually draw room boundaries."
                           TextWrapping="Wrap" Margin="0,0,0,10" FontSize="12" Foreground="#FF9800"/>

                <DataGrid x:Name="UnplacedRoomsGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          Height="150"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F9F9F9"
                          RowBackground="White"
                          BorderBrush="#DDDDDD"
                          BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="120"/>
                        <DataGridTextColumn Header="Room Name" Binding="{Binding RoomName}" Width="*"/>
                        <DataGridTextColumn Header="Track ID" Binding="{Binding TrackId}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Text="💡 Tip: Use a Room Schedule to find 'Not Placed' rooms, or filter by the trackID to locate them."
                           TextWrapping="Wrap" Margin="0,10,0,0" FontSize="11" Foreground="#666"/>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Close" Click="Close_Click" Background="#757575" Foreground="White"
                    Padding="15,8" Margin="5" FontSize="14" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
