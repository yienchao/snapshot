<Window x:Class="ViewTracker.Views.RestoreResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restore Complete"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="✅ Restore Complete" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="VersionText" FontSize="14" Foreground="White" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Results Summary -->
        <GroupBox Grid.Row="1" Header="Results" Padding="20" Margin="0,0,0,20" FontSize="14" FontWeight="SemiBold">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="✓" FontSize="20" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,10,0"/>
                    <TextBlock x:Name="UpdatedRoomsText" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="✓" FontSize="20" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,10,0"/>
                    <TextBlock x:Name="CreatedRoomsText" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
                <Border Background="#E8F5E9" Padding="12" CornerRadius="3" Margin="0,15,0,0" BorderBrush="#C8E6C9" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="BackupText" FontSize="13" Foreground="#2E7D32" TextWrapping="Wrap" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>

        <!-- Unplaced Rooms List -->
        <GroupBox Grid.Row="2" x:Name="UnplacedRoomsGroup" Header="⚠️ Unplaced Rooms Detected" Padding="15" Visibility="Collapsed" FontSize="14" FontWeight="SemiBold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#FFF3E0" Padding="15" CornerRadius="3" Margin="0,0,0,15" BorderBrush="#FFE0B2" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="⚠️ Action Required" FontSize="16" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,8"/>
                        <TextBlock Text="These rooms are NOT PLACED but were placed in the snapshot:"
                                   TextWrapping="Wrap" FontSize="14" Foreground="#E65100" Margin="0,0,0,5"/>
                        <TextBlock Text="• Newly recreated rooms from deleted snapshots"
                                   TextWrapping="Wrap" FontSize="13" Foreground="#E65100" Margin="10,2,0,2"/>
                        <TextBlock Text="• Existing rooms that were accidentally unplaced"
                                   TextWrapping="Wrap" FontSize="13" Foreground="#E65100" Margin="10,2,0,5"/>
                        <TextBlock Text="You must manually draw room boundaries for these rooms."
                                   TextWrapping="Wrap" FontSize="14" FontWeight="Bold" Foreground="#BF360C"/>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Row="1" x:Name="UnplacedRoomsGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F9F9F9"
                          RowBackground="White"
                          BorderBrush="#DDDDDD"
                          BorderThickness="1"
                          FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="150" FontWeight="SemiBold"/>
                        <DataGridTextColumn Header="Room Name" Binding="{Binding RoomName}" Width="*"/>
                        <DataGridTextColumn Header="Track ID" Binding="{Binding TrackId}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Border Grid.Row="2" Background="#E3F2FD" Padding="12" CornerRadius="3" Margin="0,15,0,0" BorderBrush="#BBDEFB" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💡" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Tip: Use a Room Schedule to find 'Not Placed' rooms, or filter by the trackID to locate them."
                                   TextWrapping="Wrap" FontSize="13" Foreground="#0D47A1" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Close" Click="Close_Click" Background="#4CAF50" Foreground="White"
                    Padding="30,12" Margin="5" FontSize="16" FontWeight="SemiBold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
